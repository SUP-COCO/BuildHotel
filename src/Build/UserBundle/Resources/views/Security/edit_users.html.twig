 {# {% extends '::template.html.twig' %} #}
{% extends 'BuildUserBundle:Security:account.html.twig' %}
{% block title %}{{ parent() }} Compte{% endblock %}

{% block param %}
	<a href="/account/edit"><div class="button blue select">Parametre</div></a>
{% endblock %}
  
{% block content %}
	<div id="content">
		 <div id="title">Param√®tre</div>
		 <hr>
		 {% if session is defined %}
			 <div id="update"><span>{{session}}</span><div id="close">X</div></div>
		 {% endif %}
		 <div id="form">
		 {{ form_start(form) }}
			 {{ form_errors(form.gender) }}
			 {{ form_errors(form.mail) }}
			{{ form_errors(form.motto) }}
			<br>
			{{ form_label(form.motto) }}<br>
			{{ form_widget(form.motto) }}
			<br>
			{{ form_label(form.gender) }}<br>
			{{ form_widget(form.gender) }}
			<br>
			 {{ form_label(form.mail) }}<br>
			 {{ form_widget(form.mail) }}
			<br>
			<br>
			 {{ form_label(form.acceptTrading) }}<br>
			 {{ form_widget(form.acceptTrading) }}
			<br>
			<br>
			 {{ form_label(form.blockNewfriends) }}<br>
			 {{ form_widget(form.blockNewfriends) }}
			<br>

			{{ form_label(form.Modifier) }}
			{{ form_widget(form.Modifier) }}
		 {{ form_end(form) }}
		</div>
	</div>
	<script type="text/javascript">
	$(function(){
		$('#close').click(function(){
			$('#update').slideUp();
		});
	});
	</script>
{% endblock %}