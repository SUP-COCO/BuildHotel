{% extends '::template.html.twig' %}
{% block title %}{{ parent() }} {{user.username}}{% endblock %}
  
{% block body %}
	<div id="left">
		<a href="/account"><div id="logo"></div></a>
		<a href="/logout"><div id="logout"><img src="{{ asset('bundles/builduser/images/icon/logout.png') }}"></div></a>
		<div id="online">Il y a {{online.usersOnline}} connecté!</div>

		<div id="profil">
			<div id="name">{{user.username}}: {{user.motto}}</div>
			<div id="avatar">
				<img src="http://avatar-retro.com/habbo-imaging/avatarimage?figure={{ user.look }}&size=b&direction=3&head_direction=3&gesture=sml">
			</div>
			<div class="badge_1">
				<ul>
					<li>{% if badges.0 is defined %}<img src="http://127.0.0.1/swfs/c_images/badges/{{badges.0.badgeId}}.gif">{% endif %}</li>
					<li>{% if badges.3 is defined %}<img src="http://127.0.0.1/swfs/c_images/badges/{{badges.3.badgeId}}.gif">{% endif %}</li>
					<li>{% if badges.2 is defined %}<img src="http://127.0.0.1/swfs/c_images/badges/{{badges.2.badgeId}}.gif">{% endif %}</li>
				</ul>
			</div>
			<div class="info bibz"><div class="content"><span>{{user.jetons}} Bib'z</span></div></div>
			{% if user.vip == 1 %}
				<div class="info credits"><div class="content"><span>Tu es VIP</span></div></div>
			{% else %}
				<div class="info credits"><div class="content"><span>Devenir VIP</span></div></div>
			{% endif %}
			<div class="info pixel"><div class="content"><span>{{user.activityPoints}} Pixels</span></div></div>
			<a href="/hotel" target="_blank"><div id="hotel" class="green">Entrez dans l'hôtel</div></a>
			{% block communaute %}
				<a href="/community/news"><div class="button yellow">Communauté</div></a>
			{% endblock %}
			{% block boutique %}
				<a href="/account/shop/bibz"><div class="button red">Boutique</div></a>
			{% endblock %}
			{% block param %}
				<a href="/account/edit"><div class="button blue">Parametre</div></a>
			{% endblock %}
			<a href="/admin"><div class="button admin">Administration</div></a>
		</div>
	</div>

	<div id="right">
		{% block content %}
			<span>Du text</span>
			<hr>
			{# {{ include("BuildUserBundle:News:index.html.twig") }} #}
		{% endblock %}
	</div>
{% endblock %}