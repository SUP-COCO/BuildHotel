{% extends '::frontpage.html.twig' %}
{% block title %}{{ parent() }} Connexion{% endblock %}
  
{% block body %}
	{# <video autoplay muted id="bgvid">
		<source src="{{ asset('bundles/builduser/video/spot-habbo.mp4') }}" type="video/mp4">
	</video> #}
	{% if error %}
		{% if(error.message == "Bad credentials.") %}
			<div id="error"><span>Pseudo ou mot de passe incorrect.</span><div id="close">X</div></div>
		{% endif %}
	{% endif %}
	{# <div id="hotel"></div> #}
	<div id="login">
		{# <h1 id="login-title">Connexion</h1> #}
		<div id="logo"></div>
		<form action="{{ path('login_check') }}" method="post">
		    <input type="text" class="input" name="_username" placeholder="Quel est ton pseudo?" value="{{ last_username }}" autofocus>
		    <input type="password" class="input" placeholder="Quel est ton mot de passe?" name="_password">
		    <input type="hidden" name="_target_path" value="/account">
		    <button class="button red" type="submit">Connexion</button>
		</form>
		<div class="promo-hotel"></div>
		{# <form action="signup">
			<button class="button blue" type="submit">Inscription</button>
		</form> #}
	</div>
	<script type="text/javascript">
	$(function(){
		$('#close').click(function(){
			$('#error').slideUp();
		});
	});
	</script>
{% endblock %}